<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base colors -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary and secondary colors -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/tan</item>
        <item name="colorSecondaryVariant">@color/tan_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/tan_light</item>
        <item name="colorSurface">@color/tan</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/tan_darker</item>

        <!-- Ensure no action bar provided by the window decor -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppBarOverlay style -->
    <style name="Theme.Blayze.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <!-- PopupOverlay style -->
    <style name="Theme.Blayze.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

</resources>