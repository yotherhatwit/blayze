<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary and secondary colors -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/grey_dark</item>
        <item name="colorSecondaryVariant">@color/grey_darker</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/grey_darker</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/orange</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey_light</item>
    </style>
</resources>
